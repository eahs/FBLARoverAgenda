<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FBLARoverAgenda.Views.TeachersListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
    xmlns:behaviors="clr-namespace:FBLARoverAgenda.Behaviors"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:controls="clr-namespace:FBLARoverAgenda.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="{DynamicResource Gray-Bg}"
    Title="My Teachers"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">

    <ContentPage.Content>

        <Grid
            ColumnSpacing="0"
            RowDefinitions="Auto, 1, *"
            RowSpacing="0">

            <StackLayout
                x:Name="TitleView"
                Grid.Row="0"
                Padding="8,8"
                BackgroundColor="{DynamicResource Gray-Bg}"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                Spacing="0">

                <StackLayout
                    x:Name="TitleLayout"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="True"
                    Orientation="Horizontal"
                    Spacing="0"
                    VerticalOptions="FillAndExpand">

                    <!--  Movie List page Title  -->
                    <Label
                        Margin="16,0"
                        FontFamily="Montserrat-Medium"
                        HorizontalOptions="FillAndExpand"
                        Style="{StaticResource TitleLabelStyle}"
                        Text=""
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />

                </StackLayout>

                <StackLayout
                    x:Name="Search"
                    HorizontalOptions="EndAndExpand"
                    IsVisible="False"
                    Orientation="Horizontal"
                    Spacing="0">

                    <!--  Back to title layout  -->
                    <buttons:SfButton
                        x:Name="BackToTitle"
                        Style="{StaticResource IconButtonStyle}"
                        Text="{StaticResource Back}">
                        <buttons:SfButton.Behaviors>
                            <behaviors:SearchBarAnimationBehavior AnimationType="shrink" />
                        </buttons:SfButton.Behaviors>
                    </buttons:SfButton>

                    <!--  Rounded Search Entry  -->
                    <border:SfBorder Style="{DynamicResource ThemeBorderStyle}">
                        <controls:BorderlessEntry
                            x:Name="SearchEntry"
                            BindingContext="{x:Reference MoviesList}"
                            HorizontalOptions="FillAndExpand"
                            Placeholder="Search here"
                            Style="{StaticResource BorderlessEntryStyle}"
                            Text="{Binding SearchText, Mode=TwoWay}" />
                    </border:SfBorder>
                </StackLayout>

                <!--  Search Button  -->
                <buttons:SfButton
                    x:Name="SearchButton"
                    IsVisible="True"
                    Style="{StaticResource IconButtonStyle}"
                    Text="{StaticResource Search}">
                    <buttons:SfButton.Behaviors>
                        <behaviors:SearchBarAnimationBehavior AnimationType="expand" />
                    </buttons:SfButton.Behaviors>
                </buttons:SfButton>

            </StackLayout>
            <BoxView Grid.Row="1" Style="{StaticResource HorizontalSeparatorStyle}" />

            <StackLayout Grid.Row="2">
                <controls:SearchableMoviesList
                    x:Name="MoviesList"
                    AllowSwiping="True"
                    AutoFitMode="Height"
                    IsScrollBarVisible="False"
                    ItemSpacing="0"
                    ItemsSource="{Binding TeachersList}"
                    SearchText="{Binding SearchText}"
                    SelectionBackgroundColor="{DynamicResource Gray-200}"
                    SelectionGesture="DoubleTap"
                    SelectionMode="Single"
                    TapCommand="{Binding ItemTappedCommand}"
                    VerticalOptions="FillAndExpand">

                    <controls:SearchableMoviesList.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid
                                    ColumnDefinitions="*, 82"
                                    ColumnSpacing="0"
                                    RowDefinitions="72, 1"
                                    RowSpacing="0">

                                    <StackLayout
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="16,13"
                                        Spacing="0">

                                        <Label
                                            FontFamily="Montserrat-Medium"
                                            FontSize="16"
                                            LineBreakMode="TailTruncation"
                                            LineHeight="{OnPlatform Android=1.5,
                                                                    Default=-1}"
                                            Text="{Binding TeacherName}"
                                            TextColor="{DynamicResource Gray-900}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <Label
                                            FontFamily="Montserrat-Medium"
                                            FontSize="14"
                                            LineHeight="{OnPlatform Android=1.5,
                                                                    Default=-1}"
                                            Text="{Binding TeacherEmail}"
                                            TextColor="{DynamicResource Gray-700}"
                                            VerticalOptions="FillAndExpand"
                                            VerticalTextAlignment="Center" />


                                    </StackLayout>

                                    <border:SfBorder
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="16,24"
                                        BackgroundColor="#FF3618"
                                        BorderColor="Transparent"
                                        CornerRadius="12"
                                        HeightRequest="24"
                                        VerticalOptions="Center"
                                        WidthRequest="50">

                                        <buttons:SfButton
                                            x:Name="editButton"
                                            Grid.Column="2"
                                            Command="{Binding EmailCommand}"
                                            CornerRadius="16"
                                            HeightRequest="24"
                                            HorizontalOptions="EndAndExpand"
                                            Style="{StaticResource IconButtonStyle}"
                                            TextColor="{DynamicResource Gray-900}"
                                            VerticalOptions="StartAndExpand"
                                            WidthRequest="50">
                                            <buttons:SfButton.Content>
                                                <Label
                                                    FontFamily="FontIcons"
                                                    FontSize="20"
                                                    HorizontalOptions="Center"
                                                    Text="{StaticResource Mail}"
                                                    TextColor="{DynamicResource Gray-200}"
                                                    VerticalOptions="Center" />
                                            </buttons:SfButton.Content>
                                        </buttons:SfButton>
                                    </border:SfBorder>

                                    <BoxView
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Style="{StaticResource HorizontalSeparatorStyle}" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </controls:SearchableMoviesList.ItemTemplate>
                </controls:SearchableMoviesList>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>